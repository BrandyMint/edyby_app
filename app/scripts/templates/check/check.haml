#check-top-external
  #check-top-internal.center
    .check-top-battlement
      .check-top-battlement-center

    .check-content
      .scrollable-check
        .check-header
          %a{href: '#'}
            %img{src: 'images/back-button.png'}
          %h2 Ваш чек

        - pos = 1
        - for item in @items
          %p= "#{pos++}. #{item.product_title}"
          %table
            %tbody
              %tr
                %td.product-amount
                  != @money item.product_price
                  x
                  = item.quantity
                %td.separator
                  %div
                %td.product-price!= @money item.total_cost

      .unscrollable-check

        .row.clearfix
          %p.all-product-sum Итог:
            %span.all-sum-right!= @money @total_cost

        %form{:name => "message", method=> "post"}
          %section
            %label{:for => "phone"} Телефон:
            %input#phone{:type => "tel", :value => "#{ if @profile.get('phoneNumber') then @profile.get('phoneNumber') }", :name => "phone", :placeholder => "+7(999)999-99-99"}
            %label{:for => "name"} Ваше имя:
            %input#name{:type => "text", :value => "#{ if @profile.get('name') then @profile.get('name') }", :name => "name"}

        %p.form-comment
          обязательно введите свой телефон для связи
